<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="membership_biometry.WebCamDialog">
        <div class="container-fluid">
            <!-- Área de vídeo e imagem lado a lado -->
            <div class="row">
                <div class="col-md-5 live_webcam_outer_div">
                    <div id="live_webcam">
                        <!-- Vídeo será inserido via JS -->
                    </div>
                </div>
				<div class="col-md-2 mt64 direction_icon fa fa-angle-right fa-8x" />
                <div class="col-md-5 webcam_result_outer_div">
                    <div id="webcam_result">
                        <!-- Imagem capturada será inserida via JS -->
                    </div>
                </div>
            </div>

            <!-- Mensagens -->
            <div id="message_container" class="mt-3 text-info">
                <!-- Mensagens serão inseridas via JS -->
            </div>

            <!-- Botões -->
            <div class="mt-3 d-flex justify-content-center gap-2">
                <button id="btn-capture" class="btn btn-primary  text-capitalize"      icon="fa-camera">Capture biometry</button>
				<button id="btn-save"    class="btn btn-primary  text-capitalize"      >Save and close</button>
                <!--button id="btn-close"   class="btn btn-secondary text-capitalize ml-2">Cancel</button-->
            </div>
        </div>
    </t>

</templates>