<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="membership_biometry.WebCamDialog">
        <div class="container">
            <!-- Área de vídeo e imagem lado a lado -->
            <div class="row">
                <div class="col-md-6">
                    <div id="live_webcam" class="border rounded p-2">
                        <!-- Vídeo será inserido via JS -->
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="webcam_result" class="border rounded p-2">
                        <!-- Imagem capturada será inserida via JS -->
                    </div>
                </div>
            </div>

            <!-- Mensagens -->
            <div id="message_container" class="mt-3 text-info">
                <!-- Mensagens serão inseridas via JS -->
            </div>

            <!-- Botões -->
            <div class="mt-3 d-flex justify-content-start">
                <button id="btn-click" class="btn btn-primary">Capturar</button>
                <button id="btn-close" class="btn btn-secondary ml-2">Fechar</button>
            </div>
        </div>
    </t>

</templates>