<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="webcam_template" name="Webcam Template">
    <t t-name="membership_biometry.WebcamCapture">
      <div class="o_field_webcam_capture">
        <video t-ref="video" autoplay="true" style="width: 320px; height: 240px;"/>
        <canvas t-ref="canvas" style="display: none;"/>
        <button class="btn btn-primary mt-2" t-on-click="_captureImage">Capture Image</button>
      </div>
    </t>
  </template>
</odoo>