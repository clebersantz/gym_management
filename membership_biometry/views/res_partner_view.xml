<odoo>
    <record id="view_res_partner_form_biometric" model="ir.ui.view">
        <field name="name">res.partner.form.biometric</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='image_1920']" position="attributes">
                <attribute name="widget">image_biometric</attribute>
            </xpath>
        </field>
    </record>
</odoo>